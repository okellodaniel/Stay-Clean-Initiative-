extends layout
block content
    .container.updateContainer
      .row
        .col.updateHeader
          h5 Update Worker information
      .row.rowUpdate
        .col.colT
          img#updateImg(src="/"+worker.imageupload)
        .col.colW
          form#formUpdate(action = "/worker/update?id="+worker._id  method="POST")
            table
              thead
                tr
                  th
                    | First Name
                  td
                    input.form-control.updateInput(name="firstName" value="worker.firstName")
                tr
                  th
                    | Last Name
                  td
                    input.form-control.updateInput(name="lastName" value="worker.secondName")
                tr
                  th
                    | NIN
                  td
                    input.form-control.updateInput(name="nin" value="worker.natId")
                tr
                  th
                    | Gender
                  td.buttonUpdate
                    label(for="maleUpdate") Male 
                    input#maleUpdate(type="radio" value="male" checked = worker.gender === "male" name ="gender")
                    label(for="femaleUpdate")  Female 
                    input#femaleUpdate(type="radio" value ="female" checked = worker.gender === "female" name="gender")
                tr
                  th
                    | Drivers license
                  td
                    input.form-control.updateInput(name="drivLic" value = "worker.drivLic")
                tr
                  th
                    | Past Incidents
                  td
                    label Accidents 
                    input(value="accidents" type="checkbox" checked = worker.pastincident.includes("accidents") name="pastincident")
                    label  Fights 
                    input(value="fights" type="checkbox" checked = worker.pastincident.includes("fights") name="pastincident")
                    label  Fuel Thefts 
                    input(value="fuel thefts" type="checkbox" checked = worker.pastincident.includes("fuel-thefts") name="pastincident")
                tr
                  th
                    | Role
                  td
                    select.formSelect(name="role")
                      option.updateInput(value="driver" selected = worker.position === "driver")  Driver
                      option.updateInput(value="conductor" selected = worker.position === "conductor")  Conductor
            button#bTN(type="submit") Update
